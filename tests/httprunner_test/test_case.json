{
     
    "config": {
        "name": "basic test config",
        "base_url": "http://127.0.0.1:8000/api",
        "output": [
            "result"
        ],
        "validate": [
            {"eq": ["status_code", 200]}
        ]
    },

    "teststeps": [
        { 
            "name": " test_add_event_all_null",
            "request": {
                "url": "/add_event/",
                "method": "POST",
                "data":{"eid":"","limit":"","address":"","start_time":""}
            },
            "extract": {
                "result": "content"
            },
            "validate": [
                {"eq": ["content.status", 10021]},
                {"eq": ["content.message", "parameter error"]}
            ]
            
        },
        {
            "name": " test_add_event_eid_exist",
            "request": {
                "url": "/add_event/",
                "method": "POST",
                "data":{"eid":1,"name":"oneplus","limit":2000,"address":"shenzhen","start_time":"2017"}
            },
            "extract": {
                "result": "content"
            },
            "validate": [
                {"eq": ["content.status", 10022]},
                {"eq": ["content.message", "event id already exists"]}
            ]

        },
        {
            "name": " test_add_event_success",
            "request": {
                "url": "/add_event/",
                "method": "POST",
                "data":{"eid":22,"name":"oneplus","limit":2000,
                        "address": "shenzhen","start_time":"2017-05-10 12:00:00"
                    }
            },
            "extract": {
                "result": "content"
            },
            "validate": [
                {"eq": ["content.status", 10200]},
                {"eq": ["content.message", "add event success"]}
            ]
        }
    ]   
}